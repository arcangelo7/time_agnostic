{% extends 'base.jinja2' %}
{% block content %}
    <section class="section">
        <div class="container">
            {% for result in triples_result["results"]["bindings"] %}
                <div class="row justify-content-center">
                    <div class="col-12 col-md-6 mb-5">
                        <div class="card bg-primary border-light shadow-soft">
                            <span class="badge badge-lg badge-dark text-wrap">{{ result["s"]["value"] }}</span>
                            <span class="badge badge-lg badge-secondary text-wrap"> {{ result["p"]["value"] }} </span>
                            <span class="badge badge-lg badge-success text-wrap"> {{ result["o"]["value"] }} </span>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>
{% endblock %}